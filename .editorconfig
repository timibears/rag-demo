# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
[*.csv]
end_of_line = crlf
insert_final_newline = false

# Tab indentation
[*.{js,tsv,py,pug}]
indent_style = tab

# 2 space indentation
[*.{json,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
